<div class="container">

    <!-- header container -->
        <div class="header-container">
            <div class="row">
                <div class="col-md-6">
                    <h1>Good Burger</h1>
                    <h4>For the gut.</h4>
                    <hr>
                    <p>Because the McDonald's is boring.</p>
                </div>
                <div class="col-md-6">	
                    <img id="cow-image" src="/assets/img/cow.jpeg">
                </div>
            </div>
        </div>
    
    <!-- container where burgers will dynamically populate -->
        <div class="burger-container">
            <div class="row">
                <div class="col-md-6">
                    <h3>Burgers to be eaten</h3>
                    <hr>
                    <ul>
                          {{#each burgers}}
                              {{#unless devoured}}
                                  <li class="individual-burger">{{ this.burger_name }} <button class="btn btn-light eat-button" data-id="{{ this.id }}">Eat it</button></li>
                              {{/unless}}
                          {{/each}}
                    </ul>
                </div>
                <div class="col-md-6">
                    <h3>Burgers eaten</h3>
                    <hr>
                    {{#each burgers}}
                        {{#if devoured}}
                        <li class="individual-burger">{{ this.burger_name }} </li>
                        {{/if}}
                    {{/each}}
                </div>
            </div>
    
        </div>
    
    <!-- form container -->
        <div class="form-container">
            <div class="row">
                <div class="col-md-8 center-element">
                    <h2>Add a burger</h2>
            
                          <div class="form-group">
                            <label for="burger_name">Enter the name of the burger that you would like below: </label>
                            <input class="input-lg form-control" id="burger_input" type="text" name="burger">
                          </div>
    
                          <button id="submit-button">Add burger</button>
                </div>
                <div class="col-md-4 idea-list">
                    <ul>
                        <li id="head-list">Good Burger Ideas</li>
                        <hr>
                        <li>Good Burger</li>
                        <li>Double Good Burger</li>
                        <li>Triple Good Burger Burger</li>
                        <li>Lean Burger</li>
                        <li>Vegan Burger</li>
                    </ul>
                </div>
            </div>
    
        </div>
    
    </div>